{
    "python.formatting.provider": "black",
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.banditEnabled": true,
    "python.linting.pylintEnabled": false,
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "python.linting.banditArgs": [
        "--skip",
        "B101,B110,B311"
    ],
    "python.analysis.extraPaths": [
        "./rosbridge_library/src",
        "./rosbridge_server/src",
        "./rosbridge_gateway/src"
    ],
    "python.autoComplete.extraPaths": [
        "/ws/install/rosbridge_test_msgs/lib/python3.8/site-packages",
        "/ws/install/rosbridge_server/lib/python3.8/site-packages",
        "/ws/install/rosbridge_gateway/lib/python3.8/site-packages",
        "/ws/install/rosbridge_msgs/lib/python3.8/site-packages",
        "/ws/install/rosapi/lib/python3.8/site-packages",
        "/ws/install/rosbridge_library/lib/python3.8/site-packages",
        "/ws/install/rosapi_msgs/lib/python3.8/site-packages",
        "/opt/ros/rolling/lib/python3.8/site-packages"
    ],
}
